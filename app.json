            "prerendered": true
          },
          "retro": {
            "image": "./assets/customicons/retro.png",
            "prerendered": true
          },
          "sparkles": {
            "image": "./assets/customicons/sparkles.png",
            "prerendered": true
          },
          "lightgreen": {
